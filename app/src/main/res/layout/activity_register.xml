<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RegisterActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Health4ALL Demo"
      android:textColor="@color/purple_200"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.126" />

  <TextView
      android:id="@+id/textViewLTBPackageName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Inregistrare"
      android:textColor="@color/colorWhite"
      android:textSize="34sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.482"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      app:layout_constraintVertical_bias="0.059" />

  <EditText
      android:id="@+id/editTextInregistrareNumeUtilizator"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_person_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Nume Utilizator"
      android:inputType="text"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textAlignment="textStart"
      android:textColor="@color/colorWhite"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textViewLTBPackageName"
      app:layout_constraintVertical_bias="0.091" />

  <EditText
      android:id="@+id/editTextInregistrareEmailUtilizator"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_email_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="E-mail Utilizator"
      android:inputType="textEmailAddress"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textAlignment="textStart"
      android:textColor="@color/colorWhite"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextInregistrareNumeUtilizator"
      app:layout_constraintVertical_bias="0.056" />

  <EditText
      android:id="@+id/editTextInregistrareParola"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_security_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Parola"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textAlignment="textStart"
      android:textColor="@color/colorWhite"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextInregistrareEmailUtilizator"
      app:layout_constraintVertical_bias="0.068" />

  <EditText
      android:id="@+id/editTextInregistrareParola2"
      android:layout_width="320dp"
      android:layout_height="40dp"
      android:background="@drawable/input_bg"
      android:drawableLeft="@drawable/ic_baseline_security_24"
      android:drawablePadding="10dp"
      android:ems="10"
      android:hint="Confirma Parola"
      android:inputType="textPassword"
      android:paddingLeft="20dp"
      android:paddingTop="10dp"
      android:paddingRight="10dp"
      android:paddingBottom="10dp"
      android:textAlignment="textStart"
      android:textColor="@color/colorWhite"
      android:textColorHint="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextInregistrareParola"
      app:layout_constraintVertical_bias="0.095" />

  <Button
      android:id="@+id/buttonInregistrare"
      android:layout_width="183dp"
      android:layout_height="44dp"
      android:background="@drawable/btn_bg"
      android:text="Inregistrare"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextInregistrareParola2"
      app:layout_constraintVertical_bias="0.213" />

  <TextView
      android:id="@+id/textViewUtilizatorExistent"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Ai deja un cont?"
      android:textColor="@color/colorWhite"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.493"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonInregistrare"
      app:layout_constraintVertical_bias="0.203" />

  </androidx.constraintlayout.widget.ConstraintLayout>